kwmc config padding 25 5 5 5
kwmc config gap 5 5

kwmc config tiling bsp
kwmc config float-non-resizable on
kwmc config lock-to-container on
kwmc config focus-follows-mouse on
kwmc config standby-on-float on
kwmc config mouse-follows-focus on

kwmc config cycle-focus on

kwmc config hotkeys on

kwmc rule owner="iTerm2" properties={role="AXDialog"}

kwmc config border focused on
kwmc config border focused size 4
kwmc config border focused color 0xAA8FA1B3
kwmc config border focused radius 6

kwmc mode prefix prefix on
kwmc mode prefix timeout 0.40
kwmc mode prefix restore default
kwmc mode prefix color 0xFFBF616A

kwmc bindsym ctrl-; mode activate prefix

kwmc bindsym prefix+ctrl-h window -f west
kwmc bindsym prefix+ctrl-j window -f south
kwmc bindsym prefix+ctrl-k window -f north
kwmc bindsym prefix+ctrl-l window -f east

kwmc bindsym prefix+ctrl-d display -f next

kwmc bindsym prefix+ctrl+cmd-h window -s west
kwmc bindsym prefix+ctrl+cmd-j window -s south
kwmc bindsym prefix+ctrl+cmd-k window -s north
kwmc bindsym prefix+ctrl+cmd-l window -s east

kwmc bindsym prefix+ctrl-q quit
kwmc bindsym prefix+ctrl+cmd-q exec lunchy stop mxcl.kwm

kwmc bindsym prefix+ctrl-r tree rotate 180
kwmc bindsym prefix+ctrl+shift-r tree rotate 90

kwmc bindsym prefix+ctrl-1 space -t bsp
kwmc bindsym prefix+ctrl-2 space -t monocle
kwmc bindsym prefix+ctrl-3 tree restore 3-col

kwmc bindsym prefix+ctrl+cmd-d window -m display next

kwmc bindsym prefix+ctrl-m window -c type toggle
kwmc bindsym prefix+ctrl-n window -fm next
kwmc bindsym prefix+ctrl+cmd-n window -fm prev
